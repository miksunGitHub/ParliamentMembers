<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/partyFragment">

    <fragment
        android:id="@+id/partyFragment"
        android:name="com.example.parliamentmembers.party.PartyFragment"
        android:label="@string/headline"
        tools:layout="@layout/fragment_party">
        <action
            android:id="@+id/action_partyFragment_to_partyMembersFragment"
            app:destination="@id/partyMembersFragment"
            app:popUpTo="@id/partyMembersFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_partyFragment_to_memberFragment"
            app:destination="@id/memberFragment"
            app:popUpTo="@id/partyFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/partyMembersFragment"
        android:name="com.example.parliamentmembers.partymembers.PartyMembersFragment"
        tools:layout="@layout/fragment_party_members">
        <argument
            android:name="partyID"
            app:argType="string" />
        <action
            android:id="@+id/action_partyMembersFragment_to_memberFragment"
            app:destination="@id/memberFragment"
            app:popUpTo="@id/partyMembersFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/memberFragment"
        android:name="com.example.parliamentmembers.member.MemberFragment"
        tools:layout="@layout/fragment_member">
        <argument
            android:name="memberID"
            app:argType="integer" />
        <action
            android:id="@+id/action_memberFragment_to_ratingFragment"
            app:destination="@id/ratingFragment"
            app:popUpTo="@id/ratingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/ratingFragment"
        android:name="com.example.parliamentmembers.rating.RatingFragment"
        tools:layout="@layout/fragment_rating">
        <action
            android:id="@+id/action_ratingFragment_to_memberFragment"
            app:destination="@id/memberFragment"
            app:popUpTo="@id/ratingFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="memberID"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/memberListFragment"
        android:name="com.example.parliamentmembers.memberlist.MemberListFragment"
        android:label="MemberListFragment" >
        <action
            android:id="@+id/action_memberListFragment_to_memberFragment"
            app:destination="@id/memberFragment"
            app:popUpTo="@id/memberListFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_memberListFragment_to_partyFragment"
            app:destination="@id/partyFragment"
            app:popUpTo="@id/memberListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/constituencyFragment"
        android:name="com.example.parliamentmembers.constituency.ConstituencyFragment"
        android:label="@string/headline"
        tools:layout="@layout/fragment_constituency">
        <action
            android:id="@+id/action_constituencyFragment_to_partyFragment"
            app:destination="@id/partyFragment"
            app:popUpTo="@id/partyFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_constituencyFragment_to_constituencyMembersFragment"
            app:destination="@id/constituencyMembersFragment" />
    </fragment>
    <fragment
        android:id="@+id/constituencyMembersFragment"
        android:name="com.example.parliamentmembers.constituency.ConstituencyMembersFragment"
        tools:layout="@layout/fragment_constituency_members">
        <action
            android:id="@+id/action_constituencyMembersFragment_to_memberFragment"
            app:destination="@id/memberFragment" />
        <argument
            android:name="constituency"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/nameFragment"
        android:name="com.example.parliamentmembers.name.NameFragment"
        android:label="@string/headline"
        tools:layout="@layout/fragment_name">
        <action
            android:id="@+id/action_nameFragment_to_memberFragment"
            app:destination="@id/memberFragment"
            app:popUpTo="@id/partyFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment2"
        android:name="com.example.parliamentmembers.InfoFragment"
        android:label="@string/headline"
        tools:layout="@layout/fragment_info" />
</navigation>